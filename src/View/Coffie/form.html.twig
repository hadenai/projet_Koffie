                           <input type="file"value="{{ coffies.imageB }}" name="imageB" class="form-control">
                        </div>


                        <div class="form-group">
                            <label for="acidity-input">Acidity<span class="text-danger">*</span></label>
                            <input type="text" value="{{ coffies.acidity }}" name="acidity" placeholder=" Moyenne" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="caffeine-input">Caffeine<span class="text-danger">*</span></label>
                            <input type="text" value="{{ coffies.caffeine }}" name="caffeine" placeholder=" 5%" class="form-control">
                        </div>
                        <div class="form-group">
                           <label for="flavor-input">Flavor<span class="text-danger">*</span></label>
                           <input type="text" value="{{ coffies.flavor }}" name="flavor" class="form-control">
