                        <input type="hidden" name="csrf_token" value="<?php echo App\Utility\Token::generate(); ?>" />
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
           {% endblock %}
            </div>
        </div>
    </div>
</div>




