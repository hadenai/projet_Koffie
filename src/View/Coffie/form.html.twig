                {% block title %}<h1>ADD ARTICLE</h1>{% endblock %}     
            </div>
{% block content %}
                <div class="panel-body">
                    <form action="" method="post">
                    <input type="hidden" value="{{ coffies.id }}" name="id">
                        <div class="form-group">
                            <label for="name-input">Name<span class="text-danger">*</span></label>
                            <input type="text" value="{{ coffies.name }}" name="name" class="form-control">
                        </div>
                        <div class="form-group">
                           <label for="image-input">Image<span class="text-danger">*</span></label>
                           <input type="file"value="{{ coffies.image }}" name="image" class="form-control">
                        </div>
                        <div>
                        <label for="category_id-input">Categorie<span class="text-danger">*</span></label>
                        <select class="form-control" name="category_id">
                            {% for cat in category%}
                            <option name="category_id" value="{{ cat.id }}">{{ cat.name }}</option>
                            {% endfor %}
                        </select>
                        </div>                        
                        <div class="form-group">
                            <label for="details-input">Brief Details<span class="text-danger">*</span></label>
                            <textarea type="text" class="form-control" name="details" class="form-control">{{ coffies.details }}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="price-input">Price<span class="text-danger">*</span></label>
                            <input type="text" value="{{ coffies.price }}" name="price" placeholder=" 25$" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="more-input">More details<span class="text-danger">*</span></label>
                            <textarea type="text" class="form-control" name="more" class="form-control">{{ coffies.more }}</textarea>
